<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/view_notes_item_margin"
    app:contentPadding="@dimen/view_notes_item_padding"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardBackgroundColor="@android:color/holo_orange_light"
    app:cardElevation="@dimen/view_notes_item_card_elevation">

    <TextView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/view_notes_intem_tite_text_size"
        android:layout_margin="@dimen/view_notes_item_margin"
        tools:text="Text" />

</android.support.v7.widget.CardView>